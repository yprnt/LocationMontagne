<Window x:Class="LocationMontagne.Views.AddReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocationMontagne.Views"
        mc:Ignorable="d"
        Title="Réservation - Location Montagne" Height="700" Width="1000" 
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Border Height="64" VerticalAlignment="Top" Background="{StaticResource PrimaryColor}">
            <Grid>
                <TextBlock Text="Réservation d'équipement" 
                         Foreground="White" 
                         FontSize="{StaticResource FontSizeXLarge}" 
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         Margin="32,0"/>
            </Grid>
        </Border>

        <Grid Margin="0,64,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="32" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Détails de l'article" 
                             Style="{StaticResource HeaderStyle}"
                             Margin="0,0,0,24"/>

                    <Border Height="240" 
                          CornerRadius="{StaticResource CornerRadiusMedium}" 
                          ClipToBounds="True"
                          Margin="0,0,0,24">
                        <Image x:Name="ArticleImage" Stretch="Uniform" Margin="16"/>
                    </Border>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                 Text="Nom :" 
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Top"
                                 Margin="0,0,0,16"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                 x:Name="NomArticleTextBox"
                                 Foreground="{StaticResource PrimaryColor}"
                                 FontWeight="SemiBold"
                                 FontSize="{StaticResource FontSizeLarge}"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                 Text="Description :" 
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Top"
                                 Margin="0,0,0,16"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                 x:Name="DescriptionTextBox"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                 Text="Prix par jour :" 
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"
                                 Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                 x:Name="TarifTextBox"
                                 Foreground="{StaticResource SecondaryColor}"
                                 FontWeight="Bold"
                                 FontSize="{StaticResource FontSizeLarge}"
                                 Margin="0,0,0,8"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="32" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Détails de la réservation" 
                             Style="{StaticResource HeaderStyle}"
                             Margin="0,0,0,32"/>

                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Période de location" 
                                 Style="{StaticResource SubHeaderStyle}"
                                 Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Date de début" Style="{StaticResource LabelStyle}"/>
                                <DatePicker x:Name="DateDebutPicker" 
                                          Style="{StaticResource DatePickerStyle}"
                                          SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Date de fin" Style="{StaticResource LabelStyle}"/>
                                <DatePicker x:Name="DateFinPicker" 
                                          Style="{StaticResource DatePickerStyle}"
                                          SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,24">
                        <TextBlock>
                            <Run Text="Quantité (Maximum disponible : "/>
                            <Run Text="{Binding quantiteStock}"/>
                            <Run Text=") :"/>
                        </TextBlock>
                        <TextBox x:Name="QuantiteTextBox" 
                               Style="{StaticResource BaseTextBoxStyle}"
                               PreviewTextInput="NumberValidationTextBox" 
                               TextChanged="QuantiteTextBox_TextChanged" 
                               Text="1"/>
                    </StackPanel>

                    <Border Background="#F8F9FA" 
                          Padding="16" 
                          CornerRadius="{StaticResource CornerRadiusMedium}"
                          Margin="0,0,0,32">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                     Text="Prix total :" 
                                     FontWeight="Bold"
                                     FontSize="{StaticResource FontSizeLarge}"
                                     VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" 
                                     x:Name="PrixTotalTextBox" 
                                     Foreground="{StaticResource SecondaryColor}"
                                     FontWeight="Bold"
                                     FontSize="{StaticResource FontSizeXLarge}"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Confirmer la réservation" 
                              Style="{StaticResource SuccessButtonStyle}"
                              Width="200" Height="48"
                              FontSize="{StaticResource FontSizeMedium}"
                              Click="ConfirmerButton_Click"
                              Margin="0,0,12,0"/>

                        <Button Content="Retour" 
                              Style="{StaticResource SecondaryButtonStyle}"
                              Width="120" Height="48"
                              Click="RetourButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>